pipeline { 
  agent any 
 
  stages { 
    stage('Checkout') { 
      steps { 
        git branch: 'main', url: ' git@github.com:Junlei-222/8.2CDevSecOps.git' ,credentialsId: 'github-ssh'
      } 
    } 
 
    stage('Install Dependencies') { 
      steps { 
        bat '"C:\\Program Files\\nodejs\\npm.cmd" install' 
      } 
    } 
 
    stage('Run Tests') { 
      steps { 
        bat '"C:\\Program Files\\nodejs\\npm.cmd" test || true' // Allows pipeline to continue despite test failures 
      } 
    } 
 
    stage('Generate Coverage Report') { 
      steps { 
        // Ensure coverage report exists 
        bat '"C:\\Program Files\\nodejs\\npm.cmd" run coverage || true' 
      } 
    } 
 
    stage('NPM Audit (Security Scan)') { 
      steps { 
        bat '"C:\\Program Files\\nodejs\\npm.cmd" audit || true' // This will show known CVEs in the output 
      } 
    } 
 
  } 
}
